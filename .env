#################################################################################
#################################################################################
##
##  MediaStack - Minimal .env (No Traefik / No Cloudflare)
##
##  Folder layout on host (relative to docker-compose.yaml):
##    ./mediastack/movies
##    ./mediastack/tv
##    ./mediastack/downloads
##    ./mediastack/appdata/<app>
##
#################################################################################
#################################################################################

# Docker Compose project name
COMPOSE_PROJECT_NAME=mediastack

#################################################################################
# Host user / timezone
#################################################################################
PUID=1001
PGID=1001
UMASK=0002
TIMEZONE=Asia/Karachi

#################################################################################
# Docker network 
#################################################################################
DOCKER_SUBNET=172.28.10.0/24
DOCKER_GATEWAY=172.28.10.1

# Your LAN subnet (only needed if you keep advertise-routes in the tailscale service)
LOCAL_SUBNET=10.0.0.0/24
LOCAL_DOCKER_IP=10.0.0.xxx      

FOLDER_FOR_MEDIA=/mediastack/media
FOLDER_FOR_DATA=/mediastack/appdata     

#################################################################################
# Tailscale
#################################################################################
TAILSCALE_AUTHKEY=PASTE_YOUR_TAILSCALE_AUTHKEY_HERE

#################################################################################
# Ports
#################################################################################
FLARESOLVERR_PORT=8191

WEBUI_PORT_JELLYFIN=8096
WEBUI_PORT_PLEX=32400
WEBUI_PORT_PROWLARR=9696
WEBUI_PORT_QBITTORRENT=8080
WEBUI_PORT_RADARR=7878
WEBUI_PORT_SONARR=8989
WEBUI_PORT_OVERSEERR=5055
WEBUI_PORT_PULSARR=3003

# qBittorrent listen port (TCP + UDP)
QBIT_PORT=6881

#################################################################################
# Plex (optional)
#################################################################################
PLEX_CLAIM=
